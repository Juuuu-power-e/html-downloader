{
  "manifest_version": 3,
  "name": "뉴스 기사 텍스트 저장기",
  "version": "1.0",
  "description": "웹페이지에서 뉴스 제목과 본문을 추출해 txt 파일로 저장합니다.",
  "permissions": ["activeTab", "scripting", "downloads"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
